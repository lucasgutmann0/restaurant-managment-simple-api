{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    // define extra paths
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@apiPath/*": ["../api/*"],
      "@config/*": ["config/*"],
      "@routes/*": ["routes/*"],
      "@models/*": ["models/*"],
      "@libs/*": ["libs/*"],
      "@controllers/*": ["controllers/*"]
    },
    // Some stricter flags (dis abled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false
  },
  "jsconfigPaths": true
}
